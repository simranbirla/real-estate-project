generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  post      Post[]
  createdAT DateTime @default(now())
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String   @unique
  price     Int
  city      String
  image     String
  address   String   @unique
  latitude  String
  longitude String
  bedroom   Int
  bathroom  Int
  type      Type
  property  Property
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAT DateTime @default(now())
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  condo
  house
  land
}
